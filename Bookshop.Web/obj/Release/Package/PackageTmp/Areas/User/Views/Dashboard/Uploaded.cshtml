@model IEnumerable<Bookshop.ViewModel.BookDetailViewModel>
@{
    ViewBag.index = "Uploaded";
    ViewBag.breadcrumb = "Uploaded";
}
<div class="col-md-9">
    <form class="navbar-form navbar-right">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Title, Author, or Others"/>
            <span class="input-group-btn">
                <button class="btn btn-default" type="submit">Filter</button>
            </span>
        </div><!-- /input-group -->
    </form>

    <table class="table table-striped table-responsive ">
        <tr>
            <th>Cover Photo</th>
            <th>Description</th>
            <th>Price</th>
            <th>Condition</th>
            <th>Condition</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr class="booklist-table">
                <td>
                    <img class="img-preview" src="@item.Photo" alt="@item.Title" />
                </td>
                <td>
                    <h4>@item.Title</h4>
                    <h5>@item.Author (@item.Edition Edition)</h5>
                    <p><span class="label label-default">@item.Department</span> <span class="label label-default">@item.Category</span></p>
                    <p>Uploaded <strong>@item.UploadDateTime</strong></p>
                </td>
                <td><h4>@item.Price</h4></td>
                <td><p><span class="label label-default">@item.Condition</span></p></td>
                <td>
                    <p><a href="/Home/Delete/?id=@item.Id"><button class="btn btn-danger btn-sm btn-block">Delete</button></a></p>
                    <p><a href="#"><button class="btn btn-primary btn-sm btn-block">Edit</button></a></p>
                </td>
                <div class="space"></div>
            </tr>
        }

    </table>
</div>
